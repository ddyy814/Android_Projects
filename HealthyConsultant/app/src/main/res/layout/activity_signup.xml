<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="SIGN UP NOW"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/signup_firstName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="FIRST NAME" />

    <EditText
        android:id="@+id/signup_lastName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_firstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="LAST NAME"/>

    <EditText
        android:id="@+id/signup_un"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_lastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="USERNAME"/>

    <EditText
        android:id="@+id/signup_pw"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_un"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="PASSWORD"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_swithToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_alignLeft="@id/button_signup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Already have an account?" />

    <Button
        android:id="@+id/button_swithToLogin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signup"
        android:layout_alignRight="@id/button_signup"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:onClick="switchToLogin"
        android:text="Log in" />

</RelativeLayout>