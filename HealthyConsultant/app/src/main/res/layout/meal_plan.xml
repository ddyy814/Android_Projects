<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/height_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Input height:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cal_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Calorie result:" />

    <Button
        android:id="@+id/suggestion_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/height_input"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Meal Suggestion" />

    <ImageView
        android:id="@+id/suggestion_view"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/suggestion_btn"
        />

</RelativeLayout>